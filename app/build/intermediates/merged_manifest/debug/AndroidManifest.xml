<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.astinil.AndroidTimesheet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.astinil.AndroidTimesheet.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.astinil.AndroidTimesheet.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_launcher"
        android:label="TimeSheetApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:testOnly="true"
        android:theme="@style/Theme.App"
        android:usesCleartextTraffic="true" >

        <!-- Launcher Activity -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.RegisterActivity"
            android:exported="false" />

        <!-- Home Screen (After Login) -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.HomeActivity"
            android:exported="false" />

        <!-- Timesheet Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.TimesheetActivity"
            android:exported="false" />

        <!-- Time Log Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.TimeLogActivity"
            android:exported="false" />

        <!-- Not used, but keeping -->
        <activity
            android:name="com.astinil.AndroidTimesheet.MainActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.astinil.AndroidTimesheet.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>