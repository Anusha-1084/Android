<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FB">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ðŸ”™ BACK BUTTON -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_margin="16dp"
            android:tint="#000000" />

        <!-- Your existing Timesheet UI -->


        <!-- â­ TOP PROFILE CARD WITH CLOCK INSIDE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- White Profile Card -->
            <LinearLayout
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:background="@drawable/card_white"
                android:elevation="6dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_bg"
                    android:padding="15dp" />

                <TextView
                    android:id="@+id/tvUserIdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anu"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tvEmpId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 12"
                    android:textColor="#6B6B6B"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUT"
                    android:textColor="#E53935"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnCheckInOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="CHECK IN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_primary_button"
                    android:layout_marginTop="20dp" />
            </LinearLayout>


        </FrameLayout>

        <!-- Title + Clock in a single row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvTimesheetTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Timesheet Calendar"
                android:textStyle="bold"
                android:textColor="#212121"
                android:textSize="17sp" />

        </LinearLayout>


        <!-- Calendar Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_white"
            android:orientation="vertical"
            android:elevation="4dp"
            android:padding="14dp"
            android:layout_marginTop="12dp">

            <!-- Dropdown row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="12dp">

                <Spinner
                    android:id="@+id/spinnerMonth"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinnerYear"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp" />

            </LinearLayout>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footerBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="#F2F2F2">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="LOGOUT"
                android:background="@drawable/login_box_bg"
                android:textColor="#000" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
