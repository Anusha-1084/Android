<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="TimeSheetApp"
        android:theme="@style/Theme.App"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Launcher Activity -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.RegisterActivity"
            android:exported="false" />

        <!-- Home Screen (After Login) -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.HomeActivity"
            android:exported="false" />

        <!-- Timesheet Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.TimesheetActivity"
            android:exported="false" />

        <!-- Time Log Screen -->
        <activity
            android:name="com.astinil.AndroidTimesheet.ui.activity.TimeLogActivity"
            android:exported="false" />

        <!-- Not used, but keeping -->
        <activity
            android:name="com.astinil.AndroidTimesheet.MainActivity"
            android:exported="false" />
    </application>

</manifest>
